<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-2">
    <h1>Stores</h1>
  </div>

  <div class="col-2">
    <%= link_to "New store", new_store_path %>
  </div>
</div>

<div class="row">
  <% if @stores.any? %>
    <% @stores.each do |store| %>
      <div class="card col-2 border-secondary mb-3">
        <%= render store %>

        <%= link_to "Show this store", store %>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="alert alert-info mt-3">
        <strong>No stores yet.</strong><br>
        Get started by creating your first store.
      </div>

      <%= link_to "Create your first store",
                  new_store_path,
                  class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
