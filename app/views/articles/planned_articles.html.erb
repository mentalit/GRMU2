<h5>Article Summary</h5>

<div class="row">
  
  <div class="card col-2">
    
    Total Articles: <%= @articles.count %> <br>
    Planned Articles: <%= @planned_articles.count %>
  </div>

   <div class="card col-2">
    
    Total SM 1 Articles: <%= @articles.where(salesmethod: 1).count %> <br>
    Planned Articles: <%= @planned_articles.where(salesmethod: 1).count %>
  </div>

   <div class="card col-2">
    
    Total SM 2 Articles: <%= @articles.where(salesmethod: 2).count %> <br>
    Planned Articles: <%= @planned_articles.where(salesmethod: 2).count %>
  </div>
</div>

<div class="row">
  <div class="col-4">
    HFB's

    <div class="row">
      <% @store.hfbs.each do |h| %>
        <div class="col-4 mb-1">
          <div class="card">
            <div class="card-body">
              <h5>HFB <%= link_to h, unplanned_articles_store_articles_path(@store, sales_area: h) %></h5>
              Total: <%= @articles.where(hfb: h).count %><br>
              Planned: <%= @articles.where(hfb: h, planned: true).count %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  
   <div class="col-7">
    PA's
    <div class="row">
      <% @store.pas.each do |p| %>
        <div class="col-3 ">
          <div class="card">
            <div class="card-body">
              <h5>PA <%= link_to p, unplanned_articles_store_articles_path(@store, sales_area: p) %></h5></h5>
              Total: <%= @articles.where(pa: p).count %><br>
              Planned: <%= @articles.where(pa: p, planned: true).count %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>





	
	

	
